<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cuentas_por_cobrar_tabla"
        >

        <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Pago"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:textColor="#000"
            android:id="@+id/cuentas_por_cobrar_columna_pago" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fecha "
                android:layout_weight="1"
                android:gravity="start"
                android:textColor="#000"
                android:id="@+id/cuentas_por_cobrar_columna_fecha" />

        </TableRow>

    </TableLayout>
    <!--aqui can los datos para lo del los totales -->
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Total Pagado:"
    android:textColor="#F00"
    android:id="@+id/cuentas_por_cobrar_texto_pagado"
    android:visibility="invisible"
    android:layout_marginTop="10px" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textColor="#000"
        android:id="@+id/cuentas_por_cobrar_texto_pagado_valor"
        android:visibility="invisible"
        android:layout_marginTop="10px" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="invisible"
        android:text="Total Adeudado:"
        android:textColor="#F00"
        android:id="@+id/cuentas_por_cobrar_texto_adeudado"
        android:layout_marginTop="10px" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:textColor="#000"
        android:id="@+id/cuentas_por_cobrar_texto_adeudado_valor"
        android:visibility="invisible"
        android:layout_marginTop="10px" />
        android:layout_marginTop="10px" />
</LinearLayout>