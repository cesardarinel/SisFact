<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sisfact.sisfac.sisfact" >

    <application
        android:name="entidades.ActiveAndroid.init"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- Notice this tag which provides the database name -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="mytestdatabase.db" />

        <!-- Notice this tag which provides the database version -->
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".Vistas.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Vistas.MenuPrincipal"
            android:label="@string/title_activity_menu_principal"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity android:name=".Vistas.vista_factura" >
        </activity>
        <activity android:name=".Vistas.Contacto" >
        </activity>
        <activity android:name=".Vistas.vista_factura_lineas" >
        </activity>
        <activity android:name=".Vistas.Productos" >
        </activity>
        <activity android:name=".Vistas.vista_modulo_generic" ></activity>

        <activity
            android:name=".vista_reporte"
            android:label="@string/title_activity_vista_reporte" >
        </activity>
    </application>

</manifest>
