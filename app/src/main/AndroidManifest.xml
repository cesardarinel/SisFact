<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sisfact.sisfac.sisfact" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name="entidades.ActiveAndroid.init"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <!-- Notice this tag which provides the database name -->
        <meta-data
            android:name="AA_DB_NAME"
            android:value="mytestdatabase.db" />

        <!-- Notice this tag which provides the database version -->
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <activity
            android:name=".Vistas.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Vistas.MenuPrincipal"
            android:label="@string/title_activity_menu_principal"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".Vistas.vista_factura"
            android:label="@string/title_activity_vista_factura" >
        </activity>
        <activity
            android:name=".Vistas.Contacto"
            android:label="@string/Contacto" >
        </activity>
        <activity
            android:name=".Vistas.vista_factura_lineas"
            android:label="@string/title_activity_vista_factura" >
        </activity>
        <activity android:name=".Vistas.Productos" >
        </activity>
        <activity
            android:name=".Vistas.vista_modulo_generic"
            android:label="@string/title_activity_vista_modulo_view_generic" >
        </activity>
        <activity
            android:name=".Vistas.vista_generica_cuentas"
            android:label="@string/title_activity_vista_modulo_view_generic" >
        </activity>
        <activity
            android:name=".Vistas.vista_reporte"
            android:label="@string/title_activity_vista_reporte" >
        </activity>
        <activity android:name=".Vistas.vista_cuenta" >
        </activity>
        <activity android:name=".Vistas.vista_ver_productos" >
        </activity>
        <activity android:name=".Vistas.detalle_producto_simple" >
        </activity>

    </application>

</manifest>
